//
//    	FSMC_NORSRAMInit(&fsmc);
//    	FSMC_NORSRAMCmd(FSMC_Bank1_NORSRAM1, ENABLE);

    	GPIO_ResetBits(CONTROLL,RES);
    	_delay_ms(10);
    	GPIO_SetBits(CONTROLL,RES);

    	GPIO_SetBits(CONTROLL,RS);
    	GPIO_ResetBits(CONTROLL,RS);
